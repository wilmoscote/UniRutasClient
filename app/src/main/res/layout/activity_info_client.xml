<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".InfoClientActivity">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="155dp" app:srcCompat="@drawable/shortlogouniguajira"
            android:id="@+id/imageView2"/>
    <TextView
            android:text="Creado por:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView3" android:textAlignment="center"
            android:textSize="24sp" android:fontFamily="casual" android:textStyle="bold"
            android:textColor="@android:color/black"/>

    <TextView
            android:text="Wilfred Moscote Gonzalez"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView4" android:textAlignment="center"
            android:textSize="24sp" android:fontFamily="casual" android:textStyle="bold"
            android:textColor="@android:color/black"/>

    <TextView
            android:text="Universidad de La Guajira"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView5" android:textAlignment="center"
            android:textSize="24sp" android:fontFamily="casual" android:textStyle="bold"
            android:textColor="@android:color/black"/>
    <TextView
            android:text="2019"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView6" android:textAlignment="center"
            android:textSize="24sp" android:fontFamily="casual" android:textStyle="bold"
            android:textColor="@android:color/black"/>
</LinearLayout>
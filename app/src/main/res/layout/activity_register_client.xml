<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".RegisterClientActivity">

    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:indeterminate="true"
            android:indeterminateTintMode="src_atop"
            android:indeterminateTint="@color/colorPrimary"
            android:visibility="gone"
    />
    <ImageView
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="127dp" app:srcCompat="@drawable/logouniguajira"
            android:id="@+id/imageView" android:scaleType="fitCenter"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Nombre de la Ruta"
            android:layout_margin="5dp"
            android:ems="10"
            android:id="@+id/txtName"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="Correo"
            android:layout_margin="5dp"
            android:ems="10"
            android:id="@+id/txtEmail"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contraseña"
            android:layout_margin="5dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/txtPassword"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirmar Contraseña"
            android:layout_margin="5dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/txtPassword2"/>
    <Button
            android:onClick="register"
            android:text="Crear Cuenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/registrar"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:text="Universidad de La Guajira - UniRutas 2019 ©"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView"
                android:layout_marginTop="320dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="1.0"
                android:layout_marginStart="32dp"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@android:color/tertiary_text_light" android:layout_marginBottom="8dp"
                android:layout_marginEnd="32dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.492"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>